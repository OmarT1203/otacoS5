<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="otacoS5.Vistas.vPersona"
             Title="vPersona">
    <VerticalStackLayout
        Spacing="20"
        Padding="20">
        <Label 
            Text="Vista de personas"
            VerticalOptions="Center" 
            FontSize="18"
            HorizontalOptions="Center" />

        <Entry x:Name="txtPersona"
               Placeholder="Ingrese una personas"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnAgregar"
                    Text="Agregar"
                    Clicked="btnAgregar_Clicked"
                    Grid.Column="0"
                    Grid.Row="0"/>
            <Label x:Name="lblMnesaje"
                   Grid.Row="1"
                   Grid.Column="0"/>
            <Button x:Name="btnListar"
                    Text="Listar Personas"
                    Clicked="btnListar_Clicked"
                    Grid.Row="2"
                    Grid.Column="0"/>
            
            <CollectionView x:Name="listaPersonas"
                            Grid.Row="3"
                            Grid.Column="0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding Id}" Grid.Column="0"/>
                            <Label Text="{Binding Name}" Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
            </CollectionView>
        </Grid>

    </VerticalStackLayout>
</ContentPage>